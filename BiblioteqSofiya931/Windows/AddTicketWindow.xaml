<Window x:Class="BiblioteqSofiya931.Windows.AddTicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BiblioteqSofiya931.Windows"
        mc:Ignorable="d"
        Title="AddTicketWindow" Height="250" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Читатель: "
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="0 0 5 0"/>
        <ComboBox Name ="ReaderCm" Grid.Column="1"
               Height="20"
               Width="100"
               HorizontalAlignment="Left"
               ItemsSource="{Binding chitatel}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding SurName}"/>
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text="{Binding Lastname}"/>
                        <TextBlock Text="{Binding NomerPhone}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Text="Сотрудник: "
                Grid.Row="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="0 0 5 0"/>
        <ComboBox Name="EmployeeCm" Grid.Column="1"
               Grid.Row="1"
               Height="20"
               Width="100"
               HorizontalAlignment="Left"
               ItemsSource="{Binding employee}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Surname}"/>
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text="{Binding Lastname}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="SaveTicketBtn"
                       Grid.ColumnSpan="2"
                       Grid.Row="2"
                       Height="35"
                       Width="100"
                       Content="Сохранить"
                       Click="SaveTicketBtn_Click"/>
        <Button x:Name="AddTicketBtn"
                Grid.Row="0"
                Grid.Column="1"
                Height="25"
                Width="90"
             VerticalAlignment="Top"
             HorizontalAlignment="Right"
                Content="Добавить"
             Click="AddTicketBtn_Click"/>
        <Button x:Name="UpBtn"
        Grid.Row="0"
        Grid.Column="1"
        Height="25"
        Width="90"
     VerticalAlignment="Bottom"
     HorizontalAlignment="Right"
        Content="Обновить"
             Click="UpBtn_Click"/>
    </Grid>
</Window>
